<h1>Product</h1>

<% cache @product do %>
  <%= image_tag @product.featured_image, style: "max-width: 500px" if @product.featured_image.attached?%>
  <h1><%= @product.name %></h1>
  <%= @product.description %>
<% end %>

<%= link_to "Back", products_path %>
<% if authenticated? %>
<%= link_to "Edit", edit_product_path(@product)%>
<%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
<% end %>